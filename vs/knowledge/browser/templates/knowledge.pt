<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      tal:define="data view/data;
                  levels view/levels;"
      i18n:domain="plone">

<head>
    <metal:block fill-slot="top_slot"
                 tal:define="dummy python:context.portal_membership.checkPermission('Modify portal content', context) or request.set('disable_border',1);
                             disable_column_one python:request.set('disable_plone.leftcolumn',1);
                             disable_column_two python:request.set('disable_plone.rightcolumn',1);" />
</head>

<body>
<metal:content-core fill-slot="content-core">
  <metal:content-core define-macro="content-core">
    <style>
      <metal:style use-macro="view/context/@@knowledge-utils/style"/>
      <metal:full use-macro="view/context/@@knowledge-utils/full"/>
    </style>

    <div class="table-wrap" i18n:domain="vs.knowledge">
      <table class="legend">
        <thead>
          <tr>
            <th colspan="2" i18n:translate="">Legend</th>
          </tr>
        </thead>
        <tbody>
          <tr tal:repeat="level view/legend">
            <th tal:content="python:level[1]">Title</th>
            <td>
              <span tal:define="value python:level[0]"
                    tal:attributes="class string:level-${value}"
                    tal:content="value">0</span>
            </td>
          </tr>
        </tbody>
      </table>

      <metal:links use-macro="view/context/@@knowledge-utils/links"/>

      <table class="knowledge full">
        <thead tal:define="names python:data.pop(0);
                           headers python:names[:5];
                           names python:names[5:];
                           totals python:data.pop(0);
                           memberids view/memberids">
          <tr>
            <th tal:repeat="header headers" tal:content="header">Header</th>
            <th tal:repeat="name names" class="employee">
              <a tal:content="python:name"
                 tal:attributes="href python:'%s%s' % (context.absolute_url(), '?other=%s' % memberids.get(name, name) if name else '')">Voornaam Achternaam</a>
            </th>
          </tr>
          <tr>
            <th tal:repeat="total totals" tal:content="total">total</th>
          </tr>
        </thead>
        <tbody>
          <tal:row repeat="row data">
            <tr tal:define="headers python:row[:5];
                            cells python:row[5:];
                            column_classes view/column_classes;">
              <tal:header repeat="header headers">
                <th tal:omit-tag="python:header is ''" tal:content="header"></th>
                <th tal:omit-tag="python:not header is ''" class="blank">&nbsp;</th>
              </tal:header>
              <tal:cell repeat="cell cells">
                <td tal:content="cell"
                    tal:attributes="class python:column_classes[repeat['cell'].index]"/>
              </tal:cell>
            </tr>
          </tal:row>
        </tbody>
      </table>

      <metal:actions use-macro="view/context/@@knowledge-utils/actions"/>
    </div>
  </metal:content-core>
</metal:content-core>
</body>
</html>
