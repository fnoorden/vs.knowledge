<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      tal:define="values view/values;
                  current_level values/level|nothing;
                  x_val python:current_level == 'X';
                  current_show values/show|nothing;
                  directions view/directions;
                  back directions/back;
                  forward directions/forward;"
      i18n:domain="plone">

<head>
    <metal:block fill-slot="top_slot"
                 tal:define="dummy python:request.set('disable_border',1);
                             disable_column_one python:request.set('disable_plone.leftcolumn',1);
                             disable_column_two python:request.set('disable_plone.rightcolumn',1);" />
</head>

<body>
<metal:content-core fill-slot="content-core">
  <metal:content-core define-macro="content-core">
    <form action="." method="POST" i18n:domain="vs.online">
      <div tal:attributes="class python:'field error' if x_val else None">
        <label>Skill experience level</label>
        <div class="formHelp" tal:condition="x_val"
             i18n:translate="">This is an imported value. Please specify the level of your experience with this skill.</div>
        <metal:select use-macro="view/context/@@knowledge-utils/select" />
      </div>
      <div>
        <label tal:define="show python:current_show not in ['', 'n']">
          <input type="checkbox" name="show" tal:condition="show" checked="checked"/>
          <input type="checkbox" name="show" tal:condition="not:show"/>
          Show on profile page
        </label>
      </div>
      <div class="formControls">
        <input type="submit" name="update" value="<<" tal:condition="back"/>
        <input type="submit" name="update" value="Update"/>
        <input type="submit" name="update" value=">>" tal:condition="forward"/>
      </div>
    </form>
  </metal:content-core>
</metal:content-core>
</body>
</html>
